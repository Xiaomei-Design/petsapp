{{> navbar}}

<div class="editUserProfile-page">

  <h1>Edit Your Profile</h1>

  {{#with user}}
  <form action="/user-profile/edit" method="POST" class="needs-validation" enctype="multipart/form-data">
    <div class="form-row">
      <div class="col-md-4 mb-3">
        <label for="validationCustom01">Username</label>
        <input type="text" name="username" class="form-control" id="validationCustom01" value="{{username}}" required>
        <div class="valid-feedback">
          {{message}}
        </div>
      </div>
      <div class="col-md-3 mb-3">
        <label for="validationCustom02">Password</label>
        <input type="password" name="password" class="form-control" id="validationCustom02" value="{{password}}"
          required>
        <div class="valid-feedback">
          {{message}}
        </div>
      </div>
      <div class="col-md-5 mb-3">
        <label for="validationCustomUsername">Email</label>
        <div class="input-group">
          <div class="input-group-prepend">
            <span class="input-group-text" id="inputGroupPrepend">@</span>
          </div>
          <input type="email" name="email" class="form-control" id="validationCustomUsername" value="{{email}}"
            aria-describedby="inputGroupPrepend" required>
          <div class="invalid-feedback">
            Please enter a email.
          </div>
        </div>
      </div>
    </div>

    <div class="form-row">
      <div class="col-md-4 mb-3">
        <label for="validationCustom03">City</label>
        <input type="text" name="city" class="form-control" id="validationCustom03" placeholder="City" required>
        <div class="invalid-feedback">
          Please provide a valid city.
        </div>
      </div>
      <div class="col-md-3 mb-3">
        <label for="validationCustom04">State</label>
        <input type="text" name="state" class="form-control" id="validationCustom04" placeholder="State" required>
        <div class="invalid-feedback">
          Please provide a valid state.
        </div>
      </div>
    </div>
    <div class="form-col">
      <div class="col-md-4 mb-3">
        <label for="userImg">Upload an Image </label>
        <input type="file" name="userImg" id="userImg">
      </div>
      <div class="col-md-4 mb-3">
        <button class="btn btn-warning" type="submit">Submit</button>
      </div>
    </div>
  </form>
  {{/with}}
</div>