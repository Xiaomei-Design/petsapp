{{> navbar}}

<div class="userProfile-page">
      
      {{#with user}}
      
      <div class="row py-5 px-4">
          <div class="col-md-5 mx-auto">
              <!-- Profile widget -->
              <div class="bg-white shadow rounded overflow-hidden">
                  <div class="px-4 pt-0 pb-4 cover">
                      <div class="media align-items-end profile-head">
                          <div class="profile mr-3"><img src="{{this.userImg}}" alt="{{this.username}}" width="130" class="rounded mb-2 img-thumbnail"><a href="/user-profile/edit" class="btn btn-outline-dark btn-sm btn-block">Edit profile</a></div>
                          <div class="media-body mb-5 text-white">
                              <h4 class="mt-0 mb-0">{{this.username}}</h4>
                              <p class="small mb-4"> <i class="fas fa-map-marker-alt mr-2"></i>{{this.address.city}}</p>
                          </div>
                      </div>
                  </div>
                  <div class="px-4 py-3">
                      <h5 class="mb-0">About</h5>
                      <div class="p-4 rounded shadow-sm bg-light">
                         <p class="font-italic mb-0">Username: {{this.username}}</p>
                          <p class="font-italic mb-0">Email: {{this.email}}</p>
                          <p class="font-italic mb-0">City: {{this.address.city}} </p>
                      </div>
                  </div>
                  <div class="py-4 px-4">
                      <div class="d-flex align-items-center justify-content-between mb-3">
                          <h5 class="mb-0">Pets Photos</h5><a href="#" class="btn btn-link text-muted">Show all</a>
                      </div>
                      <div class="row">
                          {{#each this.pets}}
                          <div class="col-lg-6 mb-2 pr-lg-1"><img src="{{petsimage}}" alt="" class="img-fluid rounded shadow-sm"></div>
                          {{/each}}
                      </div>
                  </div>
              </div>
          </div>
      </div>
      
      {{/with}}
</div>